<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>

        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>

        <item name="hintTextColor">@color/darkish_blue</item>
        <item name="helperTextTextColor">@color/darker_grey</item>
        <item name="errorTextColor">@color/red</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/goldman</item>
    </style>
</resources>