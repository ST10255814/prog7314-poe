<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintEnabled">true</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@android:color/transparent</item>

        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>

        <item name="hintTextColor">@color/darkish_blue</item>
        <item name="helperTextTextColor">@color/darker_grey</item>
        <item name="errorTextColor">@color/red</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/goldman</item>
    </style>

    <style name="CustomSearchViewTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColorHighlight">#CC99CCFF</item>
        <item name="android:textSelectHandle">@drawable/custom_handle</item>
        <item name="android:textSelectHandleLeft">@drawable/custom_handle</item>
        <item name="android:textSelectHandleRight">@drawable/custom_handle</item>
    </style>

    <style name="RentWiseDatePickerTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/darkish_blue</item>
        <item name="colorPrimaryVariant">@color/darkish_blue</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorAccent">@color/darkish_blue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerButtonStyle</item>
    </style>
    <style name="DatePickerButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/darkish_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>