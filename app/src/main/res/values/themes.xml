<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RentWise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.RentWise" parent="Base.Theme.RentWise" />

    <style name="Theme.RentWise.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_empty</item>

        <item name="windowSplashScreenAnimationDuration">0</item>

        <item name="postSplashScreenTheme">@style/Theme.RentWise</item>
    </style>

    <!--  theme for MaterialDatePicker -->
    <style name="RentWiseDatePickerThemeModern" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/darkish_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="materialCalendarStyle">@style/Widget.RentWise.MaterialCalendar</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button.TextButton</item>
    </style>

    <style name="Widget.RentWise.MaterialCalendar" parent="Widget.Material3.MaterialCalendar">
        <item name="daySelectedStyle">@style/Widget.RentWise.DaySelected</item>
        <item name="dayTodayStyle">@style/Widget.RentWise.DayToday</item>
    </style>

    <style name="Widget.RentWise.DaySelected" parent="Widget.Material3.MaterialCalendar.Day.Selected">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.RentWise.DayToday" parent="Widget.Material3.MaterialCalendar.Day.Today">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>