<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvRequestTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_broken_tap"
                android:textColor="@color/darkish_blue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/goldman"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvRequestPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="@string/placeholder_high_priority"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_priority_high"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvRequestStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="@string/placeholder_pending"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/bg_status_pending"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRequestDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_tap_leaking"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/goldman"
                android:layout_marginBottom="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvRequestUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_unit"
                android:textColor="@color/darker_grey"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:textIsSelectable="true"
                android:textColorHighlight="#CC99CCFF"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle"
                android:textSelectHandleRight="@drawable/custom_handle"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvAssignedStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_assigned"
                android:textColor="@color/darker_grey"
                android:textSize="13sp"
                android:textIsSelectable="true"
                android:textColorHighlight="#CC99CCFF"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle"
                android:textSelectHandleRight="@drawable/custom_handle"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvRequestDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_submitted_date"
                android:textColor="@color/darker_grey"
                android:textIsSelectable="true"
                android:textColorHighlight="#CC99CCFF"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle"
                android:textSelectHandleRight="@drawable/custom_handle"
                android:textSize="13sp"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvRequestId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_request_id"
                android:textColor="@color/darker_grey"
                android:textSize="13sp"
                android:textIsSelectable="true"
                android:textColorHighlight="#CC99CCFF"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle"
                android:textSelectHandleRight="@drawable/custom_handle"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_marginVertical="12dp"/>

            <TextView
                android:id="@+id/tvFollowUpRequests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_follow_ups"
                android:textColor="@color/darkish_blue"
                android:fontFamily="@font/goldman"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvCaretakerNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_caretaker_note"
                android:textColor="@color/darkish_blue"
                android:fontFamily="@font/goldman"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>