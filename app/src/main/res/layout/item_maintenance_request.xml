<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvRequestTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Broken Tap"
                android:textColor="@color/darkish_blue"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/goldman"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvRequestPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="High Priority"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_priority_high"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvRequestStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="Pending"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/bg_status_pending"
                    android:fontFamily="sans-serif-medium"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRequestDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap in kitchen is leaking..."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/goldman"
                android:layout_marginBottom="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvRequestUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit: Apartment 3B"
                android:textColor="@color/darker_grey"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvAssignedStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assigned: John Doe"
                android:textColor="@color/darker_grey"
                android:textSize="13sp"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvRequestDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submitted: 01 Sep 2025"
                android:textColor="@color/darker_grey"
                android:textSize="13sp"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tvRequestId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request ID: #12345"
                android:textColor="@color/darker_grey"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_marginVertical="12dp"/>

            <TextView
                android:id="@+id/tvFollowUpRequests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow-ups: 2"
                android:textColor="@color/darkish_blue"
                android:fontFamily="@font/goldman"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvCaretakerNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caretaker Note: Requires plumber visit"
                android:textColor="@color/darkish_blue"
                android:fontFamily="@font/goldman"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
