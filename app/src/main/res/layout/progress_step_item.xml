<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="12dp">

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="6dp"
        android:src="@drawable/step_icon_selector"
        android:background="@drawable/progress_circle_selector"
        android:id="@+id/stepIcon" />

    <TextView
        android:id="@+id/stepLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/step_label"
    android:textSize="14sp"
    android:textColor="@color/step_color_selector"
    android:fontFamily="@font/goldman" />
</LinearLayout>