<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".auth.LoginActivity">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="226dp"
        android:layout_height="153dp"
        android:src="@drawable/rentwise_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="52dp" />

    <ImageView
        android:id="@+id/houseBackground"
        android:layout_width="755dp"
        android:layout_height="801dp"
        android:scaleType="fitXY"
        android:src="@drawable/house_background"
        tools:layout_editor_absoluteX="-172dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/appSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goldman"
        android:text="@string/app_slogan"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="216dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:fontFamily="@font/goldman"
        android:text="@string/login_header"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@color/darkish_blue"
        app:cornerRadius="12dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="553dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goldman"
        android:text="@string/welcome_message"
        android:textColor="@color/darkish_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="337dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goldman"
        android:text="@string/login_to_enjoy_rentwise"
        android:textColor="@color/light_grey"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="371dp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:background="@drawable/round_white_input"
        android:drawableEnd="@drawable/password_icon"
        android:drawablePadding="12dp"
        android:fontFamily="sans-serif"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="#AFAFAF"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="491dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/googleSignInBtn"
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:fontFamily="@font/goldman"
        android:text="@string/sign_in_with_google"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@color/darkish_blue"
        app:cornerRadius="12dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="633dp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="362dp"
        android:layout_height="49dp"
        android:background="@drawable/round_white_input"
        android:drawableEnd="@drawable/email_icon"
        android:drawablePadding="12dp"
        android:fontFamily="sans-serif"
        android:hint="@string/email_address_hint"
        android:inputType="textEmailAddress"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="@color/white"
        android:textColorHint="#AFAFAF"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="429dp" />

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/goldman"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/or_condition"
        android:textStyle="bold"
        android:textColor="@color/light_grey"
        app:layout_constraintBottom_toTopOf="@+id/googleSignInBtn"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        tools:layout_editor_absoluteX="196dp" />


</androidx.constraintlayout.widget.ConstraintLayout>