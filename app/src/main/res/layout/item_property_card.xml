<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_property"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/house_interior_temp" />

        <TextView
            android:id="@+id/tv_title"
            android:text="@string/placeholder_property_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:textColorHighlight="#CC99CCFF"
            android:textSelectHandle="@drawable/custom_handle"
            android:textSelectHandleLeft="@drawable/custom_handle"
            android:textSelectHandleRight="@drawable/custom_handle"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address"
            android:text="@string/placeholder_property_address"
            android:textSize="12sp"
            android:textColor="#888888"
            android:textIsSelectable="true"
            android:textColorHighlight="#CC99CCFF"
            android:textSelectHandle="@drawable/custom_handle"
            android:textSelectHandleLeft="@drawable/custom_handle"
            android:textSelectHandleRight="@drawable/custom_handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_label1"
                    android:background="@drawable/bg_rounded_outline"
                    android:text="@string/placeholder_rooms"
                    android:padding="6dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_label2"
                    android:background="@drawable/bg_rounded_outline"
                    android:text="@string/placeholder_heating"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_label3"
                    android:background="@drawable/bg_rounded_outline"
                    android:text="@string/placeholder_wifi"
                    android:textColor="@color/black"
                    android:padding="6dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/card_rating_cluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_filled"
                    app:tint="@color/golden_yellow" />

                <TextView
                    android:id="@+id/tv_card_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_rating"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_card_rating_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_rating_count"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/black"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_price"
                android:textColor="@color/darkish_blue"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_property_duration_card"
                android:layout_marginTop="13dp"
                android:layout_marginStart="10dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="italic"
                android:textColor="@color/darker_grey"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
