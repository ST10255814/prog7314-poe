<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:src="@drawable/notification_icon"
            app:tint="@color/blue" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Property Alert"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/goldman"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/notification_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_title"
                android:text="A luxury apartment in Cape Town is now available. This one even has a sea view and is close to all amenities!"
                android:textSize="14sp"
                android:textColor="@color/darker_grey"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="3"
                android:textIsSelectable="true"
                android:textColorHighlight="#CC99CCFF"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle"
                android:textSelectHandleRight="@drawable/custom_handle"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_message"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:text="12:05:32 PM"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:singleLine="true" />

        </RelativeLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
