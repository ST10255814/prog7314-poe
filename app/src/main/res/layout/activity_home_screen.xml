<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/btn_open_drawer"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/drawer_icon"
        app:tint="@color/black"
        android:contentDescription="@string/menu"
        android:layout_gravity="top|start"/>

    <LinearLayout
        android:id="@+id/custom_drawer"
        android:layout_width="280dp"
        android:layout_height="490dp"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/drawer_background"
        android:visibility="gone"
        android:elevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darkish_blue"
            android:padding="24dp">

            <TextView
                android:id="@+id/drawer_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="26sp"
                android:fontFamily="@font/goldman"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_Settings_Tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawer_item_background"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile_icon"
                app:tint="@color/darkish_blue"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/profile_Settings_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_management"
                android:textColor="@color/drawer_item_text_selector"
                android:textSize="16sp"
                android:fontFamily="@font/goldman"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_Tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawer_item_background"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_icon"
                app:tint="@color/darkish_blue"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/settings_Tab_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/drawer_item_text_selector"
                android:textSize="16sp"
                android:fontFamily="@font/goldman"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faq_chatbot_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawer_item_background"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/help_icon"
                app:tint="@color/darkish_blue"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/faq_chatbot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/faq_chatbot"
                android:textColor="@color/drawer_item_text_selector"
                android:textSize="16sp"
                android:fontFamily="@font/goldman"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/booking_status_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawer_item_background"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/booking_status_icon"
                app:tint="@color/darkish_blue"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/booking_status_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking_status"
                android:textColor="@color/drawer_item_text_selector"
                android:textSize="16sp"
                android:fontFamily="@font/goldman"
                android:textStyle="normal"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/maintenance_status_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawer_item_background"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/maintenance_icon"
                app:tint="@color/darkish_blue"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/maintenance_Tab_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maintenance_request_status"
                android:textColor="@color/drawer_item_text_selector"
                android:textSize="16sp"
                android:fontFamily="@font/goldman"
                android:textStyle="normal"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:id="@+id/logout_Tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/drawer_item_background"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logout_icon"
                app:tint="@color/darkish_blue"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/logout_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:textColor="@color/drawer_item_text_selector"
                android:textSize="16sp"
                android:fontFamily="@font/goldman"
                android:textStyle="normal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/drawer_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/custom_nav_card"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="32dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:src="@drawable/home_icon"
                app:tint="@color/bottom_nav_icon_color_selector" />

            <ImageButton
                android:id="@+id/nav_wishlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:src="@drawable/wishlist_icon"
                app:tint="@color/bottom_nav_icon_color_selector" />

            <ImageButton
                android:id="@+id/nav_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:src="@drawable/notification_icon"
                app:tint="@color/bottom_nav_icon_color_selector" />

            <ImageButton
                android:id="@+id/nav_maintenance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:src="@drawable/maintenance_icon"
                app:tint="@color/bottom_nav_icon_color_selector" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>