<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/booking_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_main"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/house_interior_temp" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:src="@drawable/go_back_icon"
                app:tint="@color/white"
                android:contentDescription="@string/back" />

            <TextView
                android:id="@+id/property_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_back"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Luxury Beach House"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/goldman"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />

            <TextView
                android:id="@+id/property_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/property_name"
                android:layout_alignStart="@id/property_name"
                android:layout_marginTop="4dp"
                android:text="123 Ocean Drive, Cape Town"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:fontFamily="@font/aldrich"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="3" />

            <LinearLayout
                android:id="@+id/container_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_main"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/booking_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/goldman"
                    android:gravity="center"
                    android:text="@string/new_booking"
                    android:textColor="@color/darkish_blue"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_in_date"
                            android:textStyle="bold"
                            android:fontFamily="@font/aldrich"
                            android:textColor="@color/darkish_blue"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edit_checkin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/check_in_hint"
                            android:focusable="false"
                            android:clickable="true"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:drawableEnd="@drawable/calendar_icon" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_out_date"
                            android:textStyle="bold"
                            android:fontFamily="@font/aldrich"
                            android:textColor="@color/darkish_blue"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edit_checkout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/check_out_hint"
                            android:focusable="false"
                            android:clickable="true"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:drawableEnd="@drawable/calendar_icon" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_of_guests"
                            android:textStyle="bold"
                            android:fontFamily="@font/aldrich"
                            android:textColor="@color/darkish_blue"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/edit_guests"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/enter_guest_count"
                            android:background="@null"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="@color/black"
                            android:paddingTop="4dp"
                            android:inputType="number" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_price"
                            android:textStyle="bold"
                            android:fontFamily="@font/aldrich"
                            android:textColor="@color/darkish_blue"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/text_total_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="R0.00"
                            android:fontFamily="@font/goldman"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:paddingTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/file_upload_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/attach_files"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/darkish_blue"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/file_upload_subText"
                            android:textSize="13sp"
                            android:textColor="@color/grey"
                            android:layout_marginBottom="8dp"
                            android:gravity="center"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_upload_file"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_files"
                            android:backgroundTint="@color/button_background_states"
                            android:textColor="@color/white"
                            android:layout_marginBottom="8dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_selected_files"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_confirm_booking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/button_background_states"
                    android:text="@string/confirm_booking"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/goldman" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/overlay_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCFFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:indicatorSize="60dp"
            app:trackThickness="6dp"
            android:indeterminate="true"
            app:indicatorColor="@color/darkish_blue"
            app:trackColor="@color/darker_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/darkish_blue"
            android:fontFamily="@font/goldman"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/create_booking_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCFFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:indicatorSize="60dp"
            app:trackThickness="6dp"
            android:indeterminate="true"
            app:indicatorColor="@color/darkish_blue"
            app:trackColor="@color/darker_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/processing_booking"
            android:textColor="@color/darkish_blue"
            android:fontFamily="@font/goldman"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

</FrameLayout>