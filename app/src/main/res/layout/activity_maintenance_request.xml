<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/maintenance_request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_maintenance_requests"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/darkish_blue"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/goldman"/>

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/go_back_icon"
            android:contentDescription="@string/go_back_title"
            app:tint="@color/darkish_blue"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_requests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="never"
            android:visibility="gone"/>

        <include
            android:id="@+id/emptyView"
            layout="@layout/empty_maintenance"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/overlay_loading_requests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:indicatorSize="60dp"
                app:trackThickness="6dp"
                android:indeterminate="true"
                app:indicatorColor="@color/darkish_blue"
                app:trackColor="@color/darker_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_requests"
                android:textColor="@color/darkish_blue"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:fontFamily="@font/goldman"
                android:textStyle="bold"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="30dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/refreshTracking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/refresh_text"
            android:textSize="14sp"
            android:textColor="@color/darkish_blue"
            android:gravity="center"
            android:fontFamily="@font/goldman" />

        <TextView
            android:id="@+id/footerNoteHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/notice_to_tenants"
            android:textSize="22sp"
            android:textColor="@color/darkish_blue"
            android:gravity="center"
            android:fontFamily="@font/goldman" />

        <TextView
            android:id="@+id/footerNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/footer_tracking_note"
            android:textSize="12sp"
            android:textColor="@color/darker_grey"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>