<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7F9FB"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_main"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerCrop"
                android:src="@drawable/house_interior_temp" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Back"
                android:padding="8dp"
                android:src="@drawable/go_back_icon"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/favourite_Btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:src="@drawable/favourite_icon"
                android:contentDescription="Favourite"
                app:tint="#777777"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

            <LinearLayout
                android:id="@+id/container_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_main"
                android:layout_marginTop="-1dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/location_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/aldrich"
                    android:text="New York"
                    android:textColor="@color/darker_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/title_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/goldman"
                    android:text="The Aliso"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RENT"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/darker_grey"
                    android:layout_marginBottom="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/price_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1,280"
                        android:textColor="@color/darkish_blue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/goldman" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" /per night"
                        android:textColor="@color/darker_grey"
                        android:textSize="14sp"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/goldman" />
                </LinearLayout>

                <TextView
                    android:id="@+id/property_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/goldman"
                    android:text="This beautifully Aliso home is located in Adarsh Palm Retreat Tower 1, Adarsh Palm Retreat Tower 2 Adarsh Palm Retreat Bellandur."
                    android:textColor="#555555"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="PHOTOS"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="20dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/house_interior_temp" />

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/house_interior_temp" />

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/house_interior_temp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="AMENITIES"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/amenitiesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:paddingEnd="16dp"
                    app:flexWrap="wrap"
                    app:justifyContent="flex_start"
                    app:alignItems="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:elevation="2dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/estate_Agent"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:padding="4dp"
                        android:src="@drawable/temp_profile" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/landlord_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:text="Mr. Lee"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/landord_pfp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:00AM - 2:00PM"
                            android:textColor="#777777"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/call_Button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#c2fdff"
                        android:contentDescription="Call"
                        android:src="@drawable/call_icon"
                        app:tint="@color/darkish_blue" />

                    <ImageButton
                        android:id="@+id/chat_Button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="20dp"

                        android:background="@drawable/circle_background"
                        android:backgroundTint="#c2fdff"
                        android:contentDescription="Chat"
                        android:src="@drawable/message_icon"
                        app:tint="@color/darkish_blue" />

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_book_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/button_background_states"
                    android:text="@string/book_now"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/goldman"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="20dp"
                    android:elevation="2dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave A Review"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/darkish_blue"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/goldman" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recently Stayed Here?\nYour feedback helps future tenants"
                        android:textSize="14sp"
                        android:textColor="#777777"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:fontFamily="@font/aldrich" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        android:progressTint="@color/golden_yellow"
                        android:layout_marginBottom="20dp" />

                    <EditText
                        android:id="@+id/reviewMessage"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/rounded_edittext_background"
                        android:hint="Write your review (optional)"
                        android:padding="12dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submitReviewButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/button_background_states"
                        android:text="Submit Review"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/goldman" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    <FrameLayout
        android:id="@+id/favouriteOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCFFFFFF"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:indicatorSize="64dp"
                app:trackThickness="6dp"
                android:indeterminate="true"
                app:indicatorColor="@color/darkish_blue"
                app:trackColor="@color/darker_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Updating favourites..."
                android:textColor="@color/darkish_blue"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/goldman"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:indicatorSize="64dp"
                app:trackThickness="6dp"
                android:indeterminate="true"
                app:indicatorColor="@color/darkish_blue"
                app:trackColor="@color/darker_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading property..."
                android:textColor="@color/darkish_blue"
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/goldman"
                android:textStyle="bold" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
