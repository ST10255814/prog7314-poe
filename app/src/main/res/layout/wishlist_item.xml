<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/property_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/house_interior_temp" />

            <ImageButton
                android:id="@+id/favourite_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/favourite_icon_filled"
                app:tint="@color/red" />
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/property_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_property_title_card"
                android:textIsSelectable="true"
                android:textColorHighlight="#CC99CCFF"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle"
                android:textSelectHandleRight="@drawable/custom_handle"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/property_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_property_location_card"
                android:textIsSelectable="true"
                android:textColorHighlight="#CC99CCFF"
                android:textSelectHandle="@drawable/custom_handle"
                android:textSelectHandleLeft="@drawable/custom_handle"
                android:textSelectHandleRight="@drawable/custom_handle"
                android:textSize="14sp"
                android:textColor="@color/darker_grey"
                android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                android:id="@+id/property_price_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/property_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_property_amount_card"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkish_blue"
                    android:fontFamily="@font/goldman" />

                <TextView
                    android:id="@+id/property_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="@string/placeholder_property_duration_card"
                    android:textSize="14sp"
                    android:textColor="@color/darker_grey"
                    android:fontFamily="@font/goldman" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>